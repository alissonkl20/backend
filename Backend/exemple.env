# =============================================
# CONFIGURAÇÕES DO FLASK
# =============================================
FLASK_DEBUG=True
FLASK_ENV=development
SECRET_KEY=sua_chave_secreta_super_segura_aqui_altere_isto

# =============================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================
# Escolha UM dos bancos abaixo (comente o outro)

# Opção 1: PostgreSQL (Recomendado para produção)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/nome_do_banco
SQLALCHEMY_DATABASE_URI=postgresql://usuario:senha@localhost:5432/nome_do_banco

# Opção 2: SQLite (Para desenvolvimento)
# DATABASE_URL=sqlite:///database.db
# SQLALCHEMY_DATABASE_URI=sqlite:///database.db

# Configurações adicionais do PostgreSQL (opcional)
DB_USERNAME=usuario
DB_PASSWORD=senha
DB_NAME=nome_do_banco
DB_HOST=localhost
DB_PORT=5432

# Configurações do SQLAlchemy
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False

# =============================================
# CONFIGURAÇÕES DE CORS (Desenvolvimento)
# =============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_SUPPORTS_CREDENTIALS=True

# =============================================
# CONFIGURAÇÃO DO GOOGLE OAUTH2
# =============================================
# Obtenha estas credenciais em: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=seu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=seu_google_client_secret_aqui

# =============================================
# CONFIGURAÇÃO PARA DEPLOY NO RENDER
# =============================================
# Defina como "true" apenas no ambiente do Render
RENDER=false